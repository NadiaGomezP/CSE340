<% if (title) { %>
    <div class="container-formall">
        <h1 class="form-title"><%= title %></h1>
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
    </div>
    <% } else {
      res.redirect('/')
    } %>

<div class="container-form">
<div class="form-box" id="newinventoryBox">
<form id="addInventoryForm" id="inventoryForm" action="/inv/add-inventory" method="post">
    <label for="inv_make" class="form-label">Make:</label>
    <input type="text" id="inv_make" name="inv_make" class="form-input" required value="<%= locals.inv_make %>">   
    <label for="inv_model" class="form-label">Model:</label>
    <input type="text" id="inv_model" name="inv_model" class="form-input" required value="<%= locals.inv_model %>">    
    <label for="inv_year" class="form-label">Year:</label>
    <input type="text" id="year" name="inv_year" class="form-input" required pattern="\d{4}" title="Please enter a valid 4-digit year" value="<%= locals.inv_year %>">    
    <label for="inv_description" class="form-label">Description:</label>
    <textarea id="description" name="inv_description" class="form-input" required value="<%= locals.inv_description %>"></textarea><br>
    <label for="inv_image" class="form-label">Image Path:</label>
    <input type="text" id="image" name="inv_image" class="form-input" required value="<%= defaultImagePath %>" readonly>
    <label for="inv_thumbnail" class="form-label">Thumbnail Path:</label>
    <input type="text" id="thumbnail" name="inv_thumbnail" class="form-input" required value="<%= defaultThumbnailPath %>" readonly>  
    <label for="inv_price" class="form-label">Price:</label>
    <input type="text" id="price" name="inv_price" class="form-input" required pattern="\d+(\.\d{2})?" title="Please enter a valid price" value="<%= locals.inv_price %>">
    <label for="inv_miles" class="form-label">Miles:</label>
    <input type="text" id="miles" name="inv_miles" class="form-input" required pattern="\d+" title="Please enter a valid integer" value="<%= locals.inv_miles %>">  
    <label for="inv_color" class="form-label">Color:</label>
    <input type="text" id="color" name="inv_color" class="form-input" required value="<%= locals.inv_color %>">   
    <label for="classification_id">Classification:</label>
    <%- classificationList %>   
    <input type="submit" value="Submit" class="form-submit">
</form>
</div>
</div>